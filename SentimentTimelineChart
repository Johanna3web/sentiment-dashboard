import React from "react";
import { LineChart, Line, XAxis, YAxis, CartesianGrid, Tooltip, ResponsiveContainer, Legend } from "recharts";
import { format } from "date-fns";

export default function SentimentTimelineChart({ records }) {
  // Group records by date
  const groupedData = {};
  
  records.forEach(record => {
    const date = format(new Date(record.created_date), "MMM dd");
    if (!groupedData[date]) {
      groupedData[date] = { date, Positive: 0, Neutral: 0, Negative: 0 };
    }
    groupedData[date][record.sentiment]++;
  });

  const chartData = Object.values(groupedData);

  if (chartData.length === 0) {
    return (
      <div className="flex items-center justify-center h-full text-gray-400">
        No timeline data available
      </div>
    );
  }

  return (
    <ResponsiveContainer width="100%" height="100%">
      <LineChart data={chartData}>
        <CartesianGrid strokeDasharray="3 3" />
        <XAxis dataKey="date" />
        <YAxis />
        <Tooltip />
        <Legend />
        <Line type="monotone" dataKey="Positive" stroke="#00C853" strokeWidth={2} />
        <Line type="monotone" dataKey="Neutral" stroke="#FFD600" strokeWidth={2} />
        <Line type="monotone" dataKey="Negative" stroke="#D50000" strokeWidth={2} />
      </LineChart>
    </ResponsiveContainer>
  );
}
