import React from "react";
import { base44 } from "@/api/base44Client";
import { useQuery } from "@tanstack/react-query";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import SentimentPieChart from "../components/dashboard/SentimentPieChart";
import SentimentBarChart from "../components/dashboard/SentimentBarChart";
import SentimentTimelineChart from "../components/dashboard/SentimentTimelineChart";

export default function ChartsInsights() {
  const { data: records = [] } = useQuery({
    queryKey: ["sentimentData"],
    queryFn: () => base44.entities.SentimentData.list("-created_date"),
    initialData: []
  });

  const stats = {
    positive: records.filter(r => r.sentiment === "Positive").length,
    neutral: records.filter(r => r.sentiment === "Neutral").length,
    negative: records.filter(r => r.sentiment === "Negative").length
  };

  return (
    <div className="p-6 lg:p-8 space-y-6">
      <div>
        <h1 className="text-3xl font-bold text-gray-900">Charts & Insights</h1>
        <p className="text-gray-500 mt-1">Visual representation of sentiment analysis data</p>
      </div>

      <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <Card className="bg-white shadow-md">
          <CardHeader>
            <CardTitle>Sentiment Distribution</CardTitle>
          </CardHeader>
          <CardContent className="h-96">
            <SentimentPieChart data={stats} />
          </CardContent>
        </Card>

        <Card className="bg-white shadow-md">
          <CardHeader>
            <CardTitle>Sentiment Counts</CardTitle>
          </CardHeader>
          <CardContent className="h-96">
            <SentimentBarChart data={stats} />
          </CardContent>
        </Card>
      </div>

      <Card className="bg-white shadow-md">
        <CardHeader>
          <CardTitle>Sentiment Timeline</CardTitle>
        </CardHeader>
        <CardContent className="h-96">
          <SentimentTimelineChart records={records} />
        </CardContent>
      </Card>

      <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
        <Card className="bg-white shadow-md">
          <CardContent className="pt-6">
            <div className="text-center">
              <p className="text-sm text-gray-500">Total Records</p>
              <p className="text-4xl font-bold text-[#00897B] mt-2">{records.length}</p>
            </div>
          </CardContent>
        </Card>

        <Card className="bg-white shadow-md">
          <CardContent className="pt-6">
            <div className="text-center">
              <p className="text-sm text-gray-500">Dominant Sentiment</p>
              <p className="text-4xl font-bold mt-2" style={{
                color: stats.positive >= stats.neutral && stats.positive >= stats.negative ? "#00C853" :
                       stats.negative >= stats.neutral ? "#D50000" : "#FFD600"
              }}>
                {stats.positive >= stats.neutral && stats.positive >= stats.negative ? "ğŸ˜Š" :
                 stats.negative >= stats.neutral ? "ğŸ˜ " : "ğŸ˜"}
              </p>
            </div>
          </CardContent>
        </Card>

        <Card className="bg-white shadow-md">
          <CardContent className="pt-6">
            <div className="text-center">
              <p className="text-sm text-gray-500">Avg Confidence</p>
              <p className="text-4xl font-bold text-[#00897B] mt-2">
                {records.length > 0 ? 
                  ((records.reduce((sum, r) => sum + r.score, 0) / records.length) * 100).toFixed(0) : 0}%
              </p>
            </div>
          </CardContent>
        </Card>
      </div>
    </div>
  );
}
